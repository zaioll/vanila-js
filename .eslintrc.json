{
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "es2021": true
  },
  "ignorePatterns": [
    "karma.conf.js"
  ],
  "plugins": [
    "eslint-plugin-import",
    "mocha",
    "no-loops"
  ],
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-loops/no-loops": 2
  }
}
